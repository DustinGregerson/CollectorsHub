@model CollectionViewModel
@if (Model.Edit)
{
    <h3>Edit</h3>
}
else
{
    <h3>Add</h3>        
}
<div asp-validation-summary="All"></div>
@if (Model.Edit)
{
    <form asp-action="AddEdit">
        <label>Name</label>
        <input asp-for="Collection.Name" type="text" value="@Model.Collection.Name">
        <lable>Tag</lable>
        <input asp-for="Collection.Tag" type="text" value="@Model.Collection.Tag">
        <input asp-for="Collection.CollectionId" type="text" value="@Model.Collection.CollectionId" hidden></input>
        <button type="submit">Submit</button>
    </form>
}
else{
    <form asp-action="AddEdit">
        <label>Name</label>
        <input asp-for="Collection.Name" type="text">
        <lable>Tag</lable>
        <input asp-for="Collection.Tag" type="text">
        <button type="submit">Submit</button>
    </form>
}

